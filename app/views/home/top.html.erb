<div class="top-wrapper">
  <div class="container top-container">
    <div class="row">
      <div class="card-body col-md-offset-2 col-md-8 text-center">
        <div class="top-logo">
          <p>全国の「おいしいもの」を投稿するサイトです</p>
          <p>みんなで「BiMMy(美味ぃ)」を共有しましょう</p>
        </div>
      </div>

      <% if !current_user %>
        <div class="top-login col-md-offset-4 col-md-4 text-center">
          <p class="top-btn">
            <%= link_to "ログイン",login_path, class: "btn btn-primary" %>
            <%= link_to "新規登録",new_user_path, class: "btn btn-success" %>
          </p>
        </div>
        <div class="top-login col-md-offset-4 col-md-4 text-center">
          <%= form_for :session, url: login_path do |f| %>
            <%= f.hidden_field :email, {value: 'test@test.jp'} %>
            <%= f.hidden_field :password, {value: 'test1234'} %>
            <%= f.submit "テストユーザーとしてログイン", class: "btn btn-info" %>
          <% end %>
        </div>
        <div class="top-login col-md-offset-4 col-md-4 text-center">
          <%= link_to " Twitterアカウントでログイン", '/auth/twitter', class: "btn fab fa-twitter btn-primary" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>
