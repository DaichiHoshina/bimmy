<div class="wrapper">
  <div class="users-container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 users-list-container">
      <% @users.each do |user| %>
          <div class="users-list-card col-md-4">
            <div class="user-image">
              <% if user.uid != nil %>
                <img src ="<%= user[:image_url] %>" >
              <% else %>
                <%= image_tag user.image.to_s %>
              <% end %>
            </div>
            <p><%= link_to "#{user.name}",user_path(user.id) %></p>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
