<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 user-edit-container">
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :"名前" %>
            <%= f.text_area :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"自己紹介" %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit '変更', class: "btn btn-block btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
