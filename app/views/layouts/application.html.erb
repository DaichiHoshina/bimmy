<!DOCTYPE html>
<html>
  <head>
    <title>BiMMy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-expand-md navbar-fixed-top">
      <div class="nav-container nav">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "BiMMy",root_path %></li>
        </ul>

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <div class="collapse navbar-collapse" id="site-menu">
          <ul class="nav navbar-nav navbar-right">

            <% if current_user %>
              <li>
                <%= link_to "投稿する",new_post_path %>
              </li>
              <li>
                <%= link_to "人気投稿",likes_path %>
              </li>
              <li>
                <%= link_to "Myいいね",likes_path %>
              </li>
              <li>
                <%= link_to "投稿一覧",posts_path %>
              </li>
              <li>
                <%= link_to "登録者一覧",users_path %>
              </li>
              <li>
                <%= link_to "ログアウト",logout_path ,{method:"post"} %>
              </li>
              <li >
                <div class="current-user-image col-md-12">
                  <%= image_tag current_user.image.to_s %>
                  <%= link_to "#{current_user.name}",user_path(current_user.id) %>
                </div>
              </li>
            <% end %>

            <% if !current_user %>
              <li>
                <%= link_to "投稿一覧",posts_path %>
              </li>
              <li>
                <%= link_to "登録者一覧",users_path %>
              </li>
              <li>
                <%= link_to "新規登録",new_user_path %>
              </li>
              <li>
                <%= link_to "ログイン",login_path %>
              </li>
            <% end %>

          </ul>
        </div>

      </div>
    </nav>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>

    <%= yield %>

    <script>
      $(function () {
        $(".alert").fadeOut(4000);
      });
    </script>

     <p id="pageTop"><a href="#"><i class="fa fa-chevron-up"></i></a></p>

  </body>

  <footer id="footer" class="bg-light flex-column justify-content-center">
    <p>© 2019 DAICHI HOSHINA All Rights Reserved.</p>
  </footer>

</html>
